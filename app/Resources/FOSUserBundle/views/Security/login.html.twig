<body>

<div class="fh5co-loader"></div>

<div id="page">

    <nav class="fh5co-nav" role="navigation">
        <div class="top-menu">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div id="fh5co-logo" style="text-align: -webkit-center"><img style="width:40%" src="{{ asset('img/logo_iav.png') }}"/></div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <header id="fh5co-header" class="fh5co-cover" role="banner" style="background-image:url({{ asset('img/DSC_3931.jpg') }});" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2 text-center">
                    <div class="display-t">
                        <div class="display-tc animate-box" data-animate-effect="fadeIn">
                            <h1> Inscription au master ENAM</h1>
                            {% if error %}
                                <div class="alert alert-success">
                                    <strong>{{ error|trans({}, 'FOSUserBundle') }}</strong>
                                </div>
                            {% endif %}
                            <div class="col-md-6">
                                    {% if app.user %}
                                <div class="fodffddfrm" style="height: 153px; margin-top: 54px;">
                                        <form action="#" method="post">
                                            <p style="border-bottom: 1px solid #fff;padding-bottom: 20px;">
                                                <a class="btn btn-primary btn-lg btn-learn" style="width: 100%;border-radius: 0px;background-color: #1ab9a7;" href="{{ path('fos_user_security_logout') }}">Déconnecter</a>
                                            </p>
                                        </form>
                                </div>
                                    {% elseif not app.user %}
                                        <div class="form">
                                        <form action="#" method="post">
                                            <h2 style="font-family: helvetica;color: #1ab9a7;margin-top: 0;">Nouveau candidat</h2>
                                            <p style="margin-bottom: 11px;text-align: justify;">Accédez sans plus tarder à la saisie en ligne de votre acte de candidature !</p>
                                            <p style="border-bottom: 1px solid #fff;padding-bottom: 20px;">
                                                <a class="btn btn-primary btn-lg btn-learn" style="width: 100%;border-radius: 0px;background-color: #1ab9a7;" href="{{ path('register') }}">Inscrivez-vous</a>
                                            </p>
                                        </form>
                            </div>
                                    {% endif %}

                            </div>
                            <div class="col-md-6">
                                {% if app.user %}
                                    <div class="ffddform" style="height: 153px; margin-top: 54px;">
                                        <form action="/ecole/web/login_check" method="post">
                                            <p style="border-bottom: 1px solid #fff;padding-bottom: 20px;">
                                                <a class="btn btn-primary btn-lg btn-learn" style="width: 100%;border-radius: 0px;background-color: #1ab9a7;" href="{{ path('profile') }}">Accéder à mon compte</a>
                                            </p>
                                        </form>
                                    </div>
                                {% elseif not app.user %}
                                    {% block fos_user_content %}
                                        <div class="form">
                                            <form action="{{ path("fos_user_security_check") }}" method="post">
                                                <h2 style="font-family: helvetica;color: #1ab9a7;margin-top: 0;">Déja candidat</h2>
                                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                                                <label for="username">Email :</label>
                                                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>

                                                <label for="password">Mot de passe :</label>
                                                <input type="password" id="password" name="_password" required="required"/>

                                                <button type="submit" id="_submit" name="_submit">Connexion</button>
                                                <p class="message"><a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié</a></p>
                                            </form>
                                        </div>
                                    {% endblock fos_user_content %}
                                {% endif %}
                            </div>
                            <div class="col-md-12">
                            </div>
                            <div class="col-md-12">
                                <p style="color: #fff;margin-bottom:0px;font-size: 27px;">En cas de difficulté :<br><span style="color: #00d0ea;font-weight: 500;font-size: 27px;">master@enameknes.net</span></p>
                            </div>
                        </div>
                    </div>
                </div>
