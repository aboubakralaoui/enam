{% extends 'base.html.twig' %}

{% block body %}
    <h1>Schoolfield</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ schoolField.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ schoolField.name }}</td>
            </tr>
            <tr>
                <th>Dateaccreditation</th>
                <td>{% if schoolField.dateAccreditation %}{{ schoolField.dateAccreditation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ schoolField.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('schoolfield_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('schoolfield_edit', { 'id': schoolField.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
