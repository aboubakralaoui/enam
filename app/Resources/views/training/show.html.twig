{% extends 'base.html.twig' %}

{% block body %}
    <h1>Training</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ training.id }}</td>
            </tr>
            <tr>
                <th>Yeargraduation</th>
                <td>{{ training.yearGraduation }}</td>
            </tr>
            <tr>
                <th>Specialty</th>
                <td>{{ training.specialty }}</td>
            </tr>
            <tr>
                <th>Establishment</th>
                <td>{{ training.establishment }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ training.level }}</td>
            </tr>
            <tr>
                <th>Mention</th>
                <td>{{ training.mention }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('training_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('training_edit', { 'id': training.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
