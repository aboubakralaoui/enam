{% extends 'base.html.twig' %}

{% block body %}
    <h1>School</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ school.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ school.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ school.address }}</td>
            </tr>
            <tr>
                <th>Phonenumber</th>
                <td>{{ school.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if school.createdAt %}{{ school.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if school.updatedAt %}{{ school.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('school_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('school_edit', { 'id': school.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
